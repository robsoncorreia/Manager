<UserControl
    x:Class="FC.Manager.View.Components.FooterUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:FC.Manager.View.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Border Height="24" Background="{StaticResource BigStoneBillson}">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="4"
                    Direction="8"
                    ShadowDepth="2" />
            </Border.Effect>
        </Border>
        <Border Height="24" Background="{StaticResource BigStoneBillson}">
            <components:CancelFooterUserControl />
        </Border>
    </Grid>
</UserControl>